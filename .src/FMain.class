Public Sub MyRTimer_timer() ' Every tick update the servo displayed position
  Dim InServed As Servo
  Dim Cnt As Integer = 0
  Dim a As String
  
  MyPollTimer.Enabled = False
  For Each inServed In MyServos
     If InServed.ServoId = 254 Then Continue ' skip the broadcast id
     MyTextBoxes[cnt].text = Right("0" & Str(inServed.ServoId), 2) & "=" & Format(inServed.ServoPos, "###0")
     Inc cnt
     Wait
  Next
  MyPollTimer.Enabled = True
  ServosAngles.Refresh()
  Wait
End


