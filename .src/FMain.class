    CurrentSrv.SERVO_OR_MOTOR_MODE_WRITE(1, MovingServo.Value)
  Else
     CurrentSrv.SERVO_MOVE_TIME_WRITE_INT(MovingServo.Value, 0)
     CurrentAngle.text = MovingServo.Value
